+#!/usr/bin/env bash
+#
+# Quick repository readiness checker for Aegis multi-cloud support.
+# Produces a JSON summary at /tmp/repo_readiness.json and prints a short table.
+# This is a lightweight readiness check (does not provision infra or run heavy network ops).
+#
+# Usage:
+#   bash scripts/repo_readiness_check.sh
+
+set -euo pipefail
+
+OUT="/tmp/repo_readiness.json"
+now() { date --utc +"%Y-%m-%dT%H:%M:%SZ"; }
+
+has_cmd() {
+  command -v "$1" >/dev/null 2>&1
+}
+
+check_files() {
+  local missing=()
+  for f in "$@"; do
+    if [ ! -e "$f" ]; then
+      missing+=("$f")
+    fi
+  done
+  echo "${missing[@]}"
+}
+
+echo "Running Aegis repo readiness checks..."
+
+AWS_CLI_PRESENT=$(has_cmd aws && echo true || echo false)
+GCP_CLI_PRESENT=$(has_cmd gcloud && echo true || echo false)
+KUBECTL_PRESENT=$(has_cmd kubectl && echo true || echo false)
+TERRAFORM_PRESENT=$(has_cmd terraform && echo true || echo false)
+DOCKER_PRESENT=$(has_cmd docker && echo true || echo false)
+
+# Repo artifact checks (presence of helpers/manifests)
+AWS_MISSING_FILES=$(check_files \
+  "scripts/push_image_crosscloud.sh" \
+  "scripts/storage_cp.sh" \
+  "infra/aws")
+
+GCP_MISSING_FILES=$(check_files \
+  "infra/gcp" \
+  "scripts/gcp_wi_bind.sh" \
+  "scripts/gcp_finalize_and_validate.sh" \
+  "scripts/push_image_crosscloud.sh" \
+  "argo/workflows")
+
+AZURE_MISSING_FILES=$(check_files \
+  "infra/azure" \
+  "scripts/azure_wi_turnkey.sh" \
+  "scripts/azure_finalize_setup.sh")
+
+OCI_MISSING_FILES=$(check_files \
+  "infra/oci" \
+  "scripts/oci_finalize_setup.sh")
+
+ALIYUN_MISSING_FILES=$(check_files \
+  "infra/aliyun" \
+  "scripts/aliyun_ram_bind.sh" \
+  "scripts/push_image_crosscloud.sh" \
+  "scripts/storage_cp.sh")
+
+# Try to detect terraform outputs for GCP if terraform present
+GCP_TF_OUTPUTS=""
+if [ "$TERRAFORM_PRESENT" = true ] && [ -d infra/gcp ]; then
+  if terraform -chdir=infra/gcp output -json >/tmp/gcp_tf_out.json 2>/dev/null; then
+    GCP_TF_OUTPUTS=$(cat /tmp/gcp_tf_out.json)
+  else
+    GCP_TF_OUTPUTS=""
+  fi
+fi
+
+# Determine PASS/FAIL heuristics
+aws_ok=$( [ "$AWS_CLI_PRESENT" = true ] && [ -z "$AWS_MISSING_FILES" ] && echo true || echo false )
+gcp_ok=$( [ "$GCP_CLI_PRESENT" = true ] && [ -z "$GCP_MISSING_FILES" ] && [ -n "$GCP_TF_OUTPUTS" ] && echo true || echo false )
+
+# Build JSON output
+jq -n --arg t "$(now)" \
+      --arg aws_cli "$AWS_CLI_PRESENT" \
+      --arg gcp_cli "$GCP_CLI_PRESENT" \
+      --arg kubectl "$KUBECTL_PRESENT" \
+      --arg terraform "$TERRAFORM_PRESENT" \
+      --arg docker "$DOCKER_PRESENT" \
+      --arg aws_missing "$AWS_MISSING_FILES" \
+      --arg gcp_missing "$GCP_MISSING_FILES" \
+      --arg azure_missing "$AZURE_MISSING_FILES" \
+      --arg oci_missing "$OCI_MISSING_FILES" \
+      --arg aliyun_missing "$ALIYUN_MISSING_FILES" \
+      --arg aws_ok "$aws_ok" \
+      --arg gcp_ok "$gcp_ok" \
+      --arg gcp_tf_outputs "$GCP_TF_OUTPUTS" \
+      '{
+        checked_at: $t,
+        toolchain: {
+          aws_cli: $aws_cli,
+          gcloud_cli: $gcp_cli,
+          kubectl: $kubectl,
+          terraform: $terraform,
+          docker: $docker
+        },
+        repo_files: {
+          aws_missing: ($aws_missing | split(" ") | map(select(. != ""))),
+          gcp_missing: ($gcp_missing | split(" ") | map(select(. != ""))),
+          azure_missing: ($azure_missing | split(" ") | map(select(. != ""))),
+          oci_missing: ($oci_missing | split(" ") | map(select(. != ""))),
+          aliyun_missing: ($aliyun_missing | split(" ") | map(select(. != "")))
+        },
+        quick_status: {
+          aws_ready: $aws_ok,
+          gcp_ready: $gcp_ok
+        },
+        gcp_terraform_outputs_raw: ($gcp_tf_outputs)
+      }' > "$OUT"
+
+echo "Wrote readiness summary to $OUT"
+
+# Print concise table
+echo
+printf "%-8s %-8s %-40s\n" "CLOUD" "TOOL" "STATUS/NOTE"
+printf "%-8s %-8s %-40s\n" "-----" "----" "----------------------------------------"
+printf "%-8s %-8s %-40s\n" "AWS"   "$([ "$AWS_CLI_PRESENT" = true ] && echo "ok" || echo "missing")" "Missing repo files: ${AWS_MISSING_FILES:-none}"
+printf "%-8s %-8s %-40s\n" "GCP"   "$([ "$GCP_CLI_PRESENT" = true ] && echo "ok" || echo "missing")" "Missing repo files: ${GCP_MISSING_FILES:-none}"
+printf "%-8s %-8s %-40s\n" "Azure" "$([ -n "$AZURE_MISSING_FILES" ] && echo "partial" || echo "unknown")" "Missing files: ${AZURE_MISSING_FILES:-none}"
+printf "%-8s %-8s %-40s\n" "OCI"   "$([ -n "$OCI_MISSING_FILES" ] && echo "partial" || echo "unknown")" "Missing files: ${OCI_MISSING_FILES:-none}"
+printf "%-8s %-8s %-40s\n" "Aliyun" "$([ -n "$ALIYUN_MISSING_FILES" ] && echo "partial" || echo "unknown")" "Missing files: ${ALIYUN_MISSING_FILES:-none}"
+
+echo
+echo "Quick verdicts:"
+echo "  AWS ready:  $aws_ok"
+echo "  GCP ready:  $gcp_ok"
+echo
+echo "Open $OUT for full JSON output."
+
+exit 0
+
