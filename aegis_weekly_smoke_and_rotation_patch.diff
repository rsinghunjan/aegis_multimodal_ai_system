+apiVersion: monitoring.coreos.com/v1
+kind: PrometheusRule
+metadata:
+  name: aegis-rotation-status-alerts
+  namespace: aegis-ml
+spec:
+  groups:
+    - name: aegis.vault.rotation
+      rules:
+        - alert: VaultRotationVerifyFailed
+          expr: increase(aegis_vault_verify_failed_total[1h]) > 0
+          for: 10m
+          labels:
+            severity: critical
+          annotations:
+            summary: "Vault rotation verification failures detected"
+            description: "One or more vault rotations failed verification in the last hour. Check rotation reports and decision_log."
+
+        - alert: VaultRotationStale
+          expr: (time() - max_over_time(aegis_vault_last_rotation_timestamp[7d])) > 7*24*3600
+          for: 1h
+          labels:
+            severity: warning
+          annotations:
+            summary: "Vault rotation stale for >7d"
+            description: "No recorded vault rotation in the last 7 days for one or more monitored apps. Ensure rotation cadence is maintained."
+
+        - alert: PlaintextSecretsDetected
+          expr: increase(aegis_plaintext_secrets_total[1h]) > 0
+          for: 10m
+          labels:
+            severity: critical
+          annotations:
+            summary: "Plaintext k8s secrets detected"
+            description: "Plaintext secrets were detected in Kubernetes. Investigate and coordinate plaintext secret purge."
+
