+apiVersion: monitoring.coreos.com/v1
+kind: PrometheusRule
+metadata:
+  name: aegis-weekly-validation-alerts
+  namespace: aegis-ml
+spec:
+  groups:
+    - name: aegis.validation
+      rules:
+        - alert: SmokeValidationFailed
+          expr: aegis_smoke_validation_failed > 0
+          for: 5m
+          labels:
+            severity: critical
+          annotations:
+            summary: "Aegis weekly smoke validation failed"
+            description: "The weekly smoke validation indicated failure. Investigate the latest validation run and artifacts."
+        - alert: SmokeValidationMissing
+          expr: absent(aegis_smoke_validation_failed) and absent(aegis_smoke_validation_total)
+          for: 1d
+          labels:
+            severity: warning
+          annotations:
+            summary: "Aegis smoke validation metrics missing"
+            description: "Smoke validation metrics are missing from Prometheus. Ensure the Pushgateway or exporter is reachable."
+
