+name: Weekly Smoke Validation
+
+on:
+  schedule:
+    - cron: '0 6 * * 1' # every Monday at 06:00 UTC
+  workflow_dispatch:
+    inputs:
+      open_issue:
+        description: 'Open GitHub issue on failure'
+        required: false
+        default: 'true'
+
+jobs:
+  smoke:
+    runs-on: ubuntu-latest
+    permissions:
+      contents: read
+      issues: write
+    steps:
+      - uses: actions/checkout@v4
+
+      - name: Ensure tools
+        run: |
+          python -V
+          which jq || sudo apt-get update && sudo apt-get install -y jq
+
+      - name: Run smoke validation (requires KUBECONFIG_STAGING secret or self-hosted runner)
+        env:
+          KUBECONFIG: ${{ secrets.KUBECONFIG_STAGING || '' }}
+          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
+          GITHUB_REPO: ${{ github.repository }}
+          PUSHGATEWAY_URL: ${{ secrets.PUSHGATEWAY_URL || '' }}
+        run: |
+          if [ -z "${KUBECONFIG:-}" ]; then
+            echo "KUBECONFIG not set; this workflow must run on self-hosted runner with cluster access or set KUBECONFIG_STAGING secret."
+            exit 78
+          fi
+          chmod +x scripts/run_smoke_validation.sh
+          ./scripts/run_smoke_validation.sh --artifact-dir ./smoke_artifacts --kubeconfig "${KUBECONFIG}" --open-pr "${{ github.event.inputs.open_issue }}" --github-repo "${{ github.repository }}"
+
+      - name: Upload artifacts
+        if: always()
+        uses: actions/upload-artifact@v4
+        with:
+          name: smoke-artifacts
+          path: smoke_artifacts || .
+
