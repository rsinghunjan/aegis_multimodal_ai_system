+#!/usr/bin/env bash
+#
+# Weekly smoke validation wrapper
+# - Runs a lightweight post-upgrade validation (1 round, small workload)
+# - Produces a validation_report_*.json
+# - Pushes a Prometheus-friendly metric to Pushgateway (optional)
+# - Creates a GitHub issue if run fails and GITHUB_REPO/GITHUB_TOKEN are available
+#
+# Requires:
+#  - kubeconfig / cluster access (KUBECONFIG env or secret)
+#  - scripts/run_full_validation.sh present and executable
+#  - jq installed
+#  - Optional: PUSHGATEWAY_URL env to push metrics; GITHUB_REPO + GITHUB_TOKEN to open issues
+#
+set -euo pipefail
+
+ARTIFACT_DIR="${ARTIFACT_DIR:-./smoke_artifacts}"
+NODES="${NODES:-1}"
+TRAIN_SECONDS="${TRAIN_SECONDS:-60}"
+GATEWAY="${GATEWAY:-http://aegis-inference-gateway.aegis-ml.svc.cluster.local/generate}"
+PUSHGATEWAY="${PUSHGATEWAY_URL:-}"
+JOB_NAME="${JOB_NAME:-aegis_smoke_validation}"
+OPEN_ISSUE="${OPEN_ISSUE:-true}"
+GITHUB_REPO="${GITHUB_REPO:-}"   # owner/repo
+
+mkdir -p "$ARTIFACT_DIR"
+
+echo "[smoke] Running lightweight validation..."
+chmod +x ./scripts/run_full_validation.sh
+./scripts/run_full_validation.sh \
+  --nodes "${NODES}" \
+  --rounds 1 \
+  --train-seconds "${TRAIN_SECONDS}" \
+  --gateway "${GATEWAY}" \
+  --artifact-dir "${ARTIFACT_DIR}" \
+  --s3-bucket "" \
+  --s3-prefix "aegis/smoke" \
+  --simulate-preemption "false" \
+  --kubeconfig "${KUBECONFIG:-${KUBECONFIG_PATH:-}}" || true
+
+# locate report
+REPORT_JSON=$(ls validation_report_*.json 2>/dev/null | head -n1 || true)
+if [[ -z "$REPORT_JSON" ]]; then
+  echo "[smoke] No validation report produced - marking as failure"
+  VALID_OK=false
+else
+  echo "[smoke] Found report: $REPORT_JSON"
+  # consider success if vllm_csv_summary success ratio > 0 and no artifact bundle missing
+  SUCCESS_SUMMARY=$(jq -r '.vllm_csv_summary | map(.success) | add // 0' "$REPORT_JSON")
+  TOTAL_SUMMARY=$(jq -r '.vllm_csv_summary | map(.total) | add // 0' "$REPORT_JSON")
+  if [[ -z "$TOTAL_SUMMARY" || "$TOTAL_SUMMARY" -eq 0 ]]; then
+    echo "[smoke] No vLLM requests recorded -> consider failure"
+    VALID_OK=false
+  else
+    # require at least 80% success in smoke
+    pct=$(( 100 * SUCCESS_SUMMARY / TOTAL_SUMMARY ))
+    echo "[smoke] vLLM success ${SUCCESS_SUMMARY}/${TOTAL_SUMMARY} => ${pct}%"
+    if (( pct >= 80 )); then
+      VALID_OK=true
+    else
+      VALID_OK=false
+    fi
+  fi
+fi
+
+# Push metric to Pushgateway if configured
+if [[ -n "${PUSHGATEWAY}" && -x "$(command -v curl)" ]]; then
+  METRIC_NAME="aegis_smoke_validation_failed"
+  METRIC_VALUE=0
+  if [[ "$VALID_OK" != "true" ]]; then
+    METRIC_VALUE=1
+  fi
+  echo "${METRIC_NAME} ${METRIC_VALUE}" | \
+    curl --silent --show-error --data-binary @- "${PUSHGATEWAY}/metrics/job/${JOB_NAME}" || echo "[smoke] pushgateway failed"
+  echo "[smoke] Pushed metric ${METRIC_NAME}=${METRIC_VALUE} to ${PUSHGATEWAY}"
+fi
+
+# Open GitHub issue if failure and requested
+if [[ "$VALID_OK" != "true" && "${OPEN_ISSUE}" == "true" && -n "${GITHUB_REPO}" && -n "${GITHUB_TOKEN:-}" ]]; then
+  echo "[smoke] Validation failed - creating GitHub issue in ${GITHUB_REPO}"
+  TITLE="[Aegis] Weekly smoke validation failed: $(date --iso-8601=seconds)"
+  BODY="Smoke validation run failed.\n\nReport: \n\`\`\`$(jq -c . "${REPORT_JSON}" 2>/dev/null || echo "no report")\n\`\`\`\n\nArtifacts are in the workflow artifacts or in S3 if configured."
+  PAYLOAD=$(jq -n --arg t "$TITLE" --arg b "$BODY" '{title:$t, body:$b}')
+  curl -s -H "Authorization: token ${GITHUB_TOKEN}" -H "Accept: application/vnd.github.v3+json" \
+    -X POST "https://api.github.com/repos/${GITHUB_REPO}/issues" -d "$PAYLOAD" > /tmp/smoke_issue.json || true
+  ISSUE_URL=$(jq -r '.html_url // empty' /tmp/smoke_issue.json || true)
+  echo "[smoke] Created issue: ${ISSUE_URL:-(failed to create)}"
+fi
+
+if [[ "$VALID_OK" == "true" ]]; then
+  echo "[smoke] Validation PASSED"
+  exit 0
+else
+  echo "[smoke] Validation FAILED"
+  exit 2
+fi
+
